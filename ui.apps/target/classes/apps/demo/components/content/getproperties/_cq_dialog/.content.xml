<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
	helppath="http://www.adobe.com/go/aem6_1_docs_component_en#List - Sightly"
	jcr:title="Text Style Component" sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<layout jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<template sling:resourceType="granite/ui/components/foundation/form/select"
				jcr:primaryType="nt:unstructured" fieldLabel="Template" multiple="{Boolean}false"
				name="./template">
				<datasource jcr:primaryType="nt:unstructured"
					sling:resourceType="/bin/templates" addNone="{Boolean}true" />
			</template>
			<pathBrowser jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
				fieldLabel="Path Browser" name="./searchPath" rootPath="/etc/demo" />
		</items>
	</content>
</jcr:root>
