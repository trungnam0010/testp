<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Brand List Data Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <componentID
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/textfield"
	                            class="halfsizeck"
	                            fieldDescription="BrandList-Data Component ID description"
	                            fieldLabel="Common-Component ID"
	                            name="./componentID"/>
                            <datasrc
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                class="urlck"
                                fieldLabel="BrandList-Data File"
                                fieldDescription="BrandList-Data File description"
                                name="./datasrc"
                                required="{Boolean}true"
                                rootPath="/content/dam/"/>
                            <index
                                jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/select"
	                            fieldLabel="BrandList-index"
	                            fieldDescription="BrandList-index description"
	                            name="./index">
	                                <items jcr:primaryType="nt:unstructured"/>
                            </index>
                            <indexHidden
                                jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/hidden"
	                            name="./index"/>
                        </items>
                    </columns>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Display Setting"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <style
                                jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/select"
	                            fieldLabel="BrandList-Brand List Format"
	                            fieldDescription="BrandList-Brand List Format description"
	                            name="./style">
	                                <items jcr:primaryType="nt:unstructured">
	                                    <saleTop
	                                        jcr:primaryType="nt:unstructured"
	                                        text="Sale Top"
	                                        value="sale"/>
	                                    <brandCoupon
	                                        jcr:primaryType="nt:unstructured"
	                                        text="Brand Coupon"
	                                        value="coupon"/>
	                                    <limitedTimeSale
	                                        jcr:primaryType="nt:unstructured"
	                                        text="Limited Time Sale"
	                                        value="limitedSale"/>
	                                    <favoriteRegistration
	                                        jcr:primaryType="nt:unstructured"
	                                        text="Favorite Registration"
	                                        value="favorite"/>
	                                 </items>
                            </style>
                            <cssclass
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/textfield"
	                            class="cssck"
	                            fieldDescription="Common-CSS Class description"
	                            fieldLabel="Common-CSS Class"
	                            name="./cssclass"/>
                        </items>
                    </columns>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>
